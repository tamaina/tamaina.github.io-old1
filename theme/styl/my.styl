html
body
  line-height: 1.6em
  font-family: mgenplus-c-w, GenShinGothic-w, sans-serif
  word-break: break-word

h1
h2
h3
h4
h5
h6
  font-family: mgenplus-p-w, GenShinGothic-w, sans-serif
  font-weight: 700

.card .card-footer
  position: absolute
  bottom: 0
  left: 0
  width: 100%

.navbar-brand
  font-weight: 700

#navbar_items
  width: max-content
  width: -moz-max-content
  width: -webkit-max-content
  width: -o-max-content
  width: -ms-max-content
  .navbar-nav
    width: 100%
    .nav-link
      width: max-content
      width: -moz-max-content
      width: -webkit-max-content
      width: -o-max-content
      width: -ms-max-content
      word-break: keep-all

nav
  overflow: auto

.navbar-brand
  img
    filter: drop-shadow(0 0 1px #fff) drop-shadow(0 0 1px #fff) drop-shadow(0 0 1px #fff)
  .navbar-brand-text
    display: inline-block
    margin: 1px 0 0 5px

#main_header
  background-size: cover
  text-shadow: 0 0 1px #212121,0 0 2px #212121
  padding: 5em 0 0

.social-circle
  font-size: 1.5rem
  line-height: 3rem
  width: 3rem

#blogheader_footer
  margin: 3em 0 0 0

  #blogheader_next
  #blogheader_prev
    font-weight: 400
    transition: all 0.75s ease
    flex: auto
    background-color: rgba(255, 255, 255, 0.25)
    &:hover
      background-color: rgba(0, 0, 0, 0.25)