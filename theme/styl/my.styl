html
body
  line-height: 1.6em
  font-family: mgenplus-c-w, GenShinGothic-w, sans-serif
  word-break: break-word

@media (max-width: 350px)
  html
  body
    font-size: 12px

@media (min-width: 350px)
  html
  body
    font-size: 14px

@media (min-width: 500px)
  html
  body
    font-size: 16px

h1
h2
h3
h4
h5
h6
  font-family: mgenplus-p-w, GenShinGothic-w, sans-serif
  font-weight: 700

.card .card-footer
  position: absolute
  bottom: 0
  left: 0
  width: 100%

.navbar-brand
  font-weight: 700

#navbar_items
  width: max-content
  width: -moz-max-content
  width: -webkit-max-content
  width: -o-max-content
  width: -ms-max-content
  .navbar-nav
    width: 100%
    .nav-link
      width: max-content
      width: -moz-max-content
      width: -webkit-max-content
      width: -o-max-content
      width: -ms-max-content
      word-break: keep-all

nav
  overflow: auto

.navbar-brand
  img
    filter: drop-shadow(0 0 1px #fff) drop-shadow(0 0 1px #fff) drop-shadow(0 0 1px #fff)
  .navbar-brand-text
    display: inline-block
    margin: 1px 0 0 5px

#main_header
  background-size: cover
  text-shadow: 0 0 1px #212121,0 0 2px #212121
  padding: 5em 0 0
