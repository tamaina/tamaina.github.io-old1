nav(aria-label="breadcrumb")#breadcrumb.bg-dark
  .container
    ol.breadcrumb.bg-dark.text-white.m-0.py-1
      - let dirs = page.meta.permalink.split("/")                 // ["","foo","bar","hoge",""]
      if( dirs.length > 2 )
        li.breadcrumb-item
          a(href=`${site.url.path}/`).py-1 Home
        - let dirpl = "/"
        - for( let i = 1; i < dirs.length - 1; i++){                // i = 3
        -   let nowdir = dirs[i]                                    // "bar"
        -   dirpl = `${dirpl}${nowdir}/`                            // /foo/bar/
        -   let indexPage = pages.find(e => e.meta.permalink === dirpl)
        -   if( indexPage != undefined && i != dirs.length - 2 ){
        -     if (!!indexPage.attributes.title) {
          li.breadcrumb-item
            a(href=`${site.url.path}${dirpl}`).py-1 #{indexPage.attributes.title}
        -     } else {
          li.breadcrumb-item
            a(href=`${site.url.path}${dirpl}`).py-1 #{nowdir}
        -     }
        -   } else if( i == dirs.length - 2 ){
        -     if (!!page.attributes.title) {
          li.breadcrumb-item(aria-current="page") #{indexPage.attributes.title}
        -     } else {
          li.breadcrumb-item(aria-current="page") #{nowdir}
        -     }
        -   }
        - }
      else
        li.breadcrumb-item(aria-current="page") Home