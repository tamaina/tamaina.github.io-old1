  .container
    ol.breadcrumb.bg-light.m-0.px-0.py-2
      - let dirs = page.meta.permalink.split("/")                 // ["","foo","bar","hoge",""]
      if( dirs.length > 2 )
        li.breadcrumb-item
          a(href=`${site.url.path}/`).py-2 Home
        - let dirpl = "/"
        - for( let i = 1; i < dirs.length - 1; i++){                // i = 3
        -   let nowdir = dirs[i]                                // "bar"
        -   dirpl = `${dirpl}${nowdir}/`                            // /foo/bar/
        -   let indexPage = pages.find(e => e.meta.permalink === dirpl)
        -   if( indexPage != undefined && i != dirs.length - 2 ){
          li.breadcrumb-item
            a(href=`${site.url.path}${dirpl}`).py-2 #{indexPage.attributes.title}
        -   } else if( indexPage == undefined && i != dirs.length - 2 ){
          li.breadcrumb-item
            a(href=`${site.url.path}${dirpl}`).py-2 #{nowdir}
        -   } else if( indexPage != undefined && i == dirs.length - 2 ){
          li.breadcrumb-item(aria-current="page") #{indexPage.attributes.title}
        -   } else if( indexPage == undefined && i == dirs.length - 2 ){
          li.breadcrumb-item(aria-current="page") #{nowdir}
        -   }
        - }
      else
        li.breadcrumb-item(aria-current="page") Home